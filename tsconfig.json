{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "lib/types/*"
      ]
    },
    "types": [
      "node",
      "jasmine"
    ],
    "lib": [
      "es2017"
    ]
  },
  "include": [
    "lib/**/*",
    "test/**/*"
  ]
}